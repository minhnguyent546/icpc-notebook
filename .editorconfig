# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.h,*.cpp}]
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_size = 2

[{*.tex,*.sty}]
indent_size = 2

[{Makefile,makefile}]
indent_style = tab
indent_size = 2
